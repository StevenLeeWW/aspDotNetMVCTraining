
@{
    ViewData["Title"] = "Future Value Calculator";
}

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@model FutureValueModel


<h1>Future Value Calculator</h1>
<form asp-action="Index" method="post">
    <div asp-validation-summary="All"></div>
    <table>
        <tr>
            <td style="column-width: 200px;"><label asp-for="MonthlyInvestment">Monthly Investment:</label></td>
            <td><input asp-for="MonthlyInvestment" /></td>
        </tr>
        <tr>
            <td><label asp-for="YearlyInterestRate">Yearly Interest Rate:</label></td>
            <td><input asp-for="YearlyInterestRate" /></td>
        </tr>
        <tr>
            <td><label asp-for="Years">Number of Years:</label></td>
            <td><input asp-for="Years" /></td>
        </tr>
        <tr>
            <td><label>Future Value:</label></td>
            <td><input value="@ViewBag.FV.ToString("C2")" readonly /></td>
        </tr>
    </table>

    <button type="submit">Calculate</button>
    <a asp-action="Index">Clear</a>
    <a asp-action="Customer">Customer</a>
</form>

